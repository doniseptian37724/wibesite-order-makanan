# ======================================
# Anti Gravity - Environment Variables
# Salin file ini menjadi .env dan isi nilainya
# ======================================

# Server
PORT=3000
NODE_ENV=production

# Database PostgreSQL
DB_HOST=your_db_host
DB_PORT=5432
DB_NAME=anti_gravity
DB_USER=your_db_user
DB_PASS=your_db_password

# JWT Secret (ganti dengan string random yang kuat)
JWT_SECRET=ganti-dengan-string-rahasia-yang-panjang

# WhatsApp (Fonnte)
WHATSAPP_ADMIN_NUMBER=628xxxxxxxxxx
WA_API_KEY=your_fonnte_api_key
WHATSAPP_GROUP_ID=optional_group_id@g.us

# CORS
CORS_ORIGIN=*
